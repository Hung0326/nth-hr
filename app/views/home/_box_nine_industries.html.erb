<div class="container">
  <div class="border_box_cities">
    <div class="box_text_five_jobs box_padding_city">
      <span>Top các nghành phổ biến</span>
    </div>
    <div class="row no-gutters">
      <% @top_industries.each do |industry| %>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
          <div class="box_info_city">
            <div class="ct_name">
              <%= link_to industry.name, jobs_path(model: 'industry', slug: industry.slug), class: 'link_ct' %>
            </div>
            <div class="ct_jobs_count">
              <%= link_to "#{industry.jobs.count} công việc", jobs_path(model: 'industry', slug: industry.slug), class: 'link_ct' %>
            </div>  
          </div>
        </div>
      <% end %>
      <div class="col-lg-12">
        <div class="box_info_city">
          <div class="ct_name">
            <%= link_to 'Xem Thêm', industry_index_path, class: 'link_ct' %>
          </div>
          <div class="ct_jobs_count">
            <i class="fas fa-ellipsis-h"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
